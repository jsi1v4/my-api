{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src/",
    "module": "commonjs",
    "outDir": "dist/",
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [".git", "node_modules", "src/**/*.test.ts"]
}
